
@{
    ViewData["Title"] = "Edit";
}

<h1>Edit Product</h1>
<div class="container">
    @{ Html.BeginForm();}
    <div class="row">
        <div class="col-lg-3">
            @Html.Label("Enter Product Name")
        </div>
        <div class="col-lg-3">
            @Html.TextBox("Pname",(string)ViewBag.Pname)
        </div>
    </div>
    <div class="row">
        <div class="col-lg-3">
            @Html.Label("Enter Product Price")
        </div>
        <div class="col-lg-3">
            @Html.TextBox("Pprice", (int)ViewBag.Pprice)
            @Html.Hidden("PId", (int)ViewBag.PId)
        </div>
    </div>
    <div class="row">
        <div class="col-lg-3">
            @Html.Label("Enter Product Description")
        </div>
        <div class="col-lg-3">
            @Html.TextBox("Pdescription",(string)ViewBag.Pdescription)
        </div>
    </div>
    <div class="row">
        <div class="col-lg-3">
        </div>
        <div class="col-lg-3">
            <input type="submit" value="Update" class="btn btn-warning" />
        </div>
    </div>
    @{Html.EndForm();}
</div>

