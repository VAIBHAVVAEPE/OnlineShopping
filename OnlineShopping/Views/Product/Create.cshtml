
@{
    ViewData["Title"] = "Create";
}

<h1>Add New Product</h1>

<div class="container">
    @{ Html.BeginForm();}
    <div class="row">
        <div class="col-lg-3">
            @Html.Label("Enter Product Name")
        </div>
        <div class="col-lg-3">
            @Html.TextBox("Pname")
        </div>
    </div>
    <div class="row">
        <div class="col-lg-3">
            @Html.Label("Enter Product Price")
        </div>
        <div class="col-lg-3">
            @Html.TextBox("Pprice")
        </div>
    </div>
    <div class="row">
        <div class="col-lg-3">
            @Html.Label("Enter Product Description")
        </div>
        <div class="col-lg-3">
            @Html.TextBox("Pdescription")
        </div>
    </div>
    <div class="row">
        <div class="col-lg-3">
        </div>
        <div class="col-lg-3">
           <input type="submit" value="Save" class="btn btn-success"/>
        </div>
    </div>
    @{Html.EndForm();}
</div>
